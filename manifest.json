{
  "manifest_version": 2,
  "name": "future",
  "description": "The future of browsing history",
  "version": "0.1",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "src/img/icon.png"
  },
  "background": {
    "scripts": [
      "src/libs/moment.min.js",
      "src/libs/dexie.min.js",
      "src/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at" :"document_end",
      "matches": ["*://*/*"],
      "js": [
        "src/libs/jquery.min.js",
        "src/libs/dexie.min.js",
        "src/libs/lodash.js",
        "src/libs/vue.js",
        "src/libs/moment.min.js",
        "src/js/app.js"
      ]
    }
  ]
}
